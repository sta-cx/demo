.container {
  padding: 32rpx;
  background: var(--bg-secondary);
  min-height: 100vh;
}

/* å¤´éƒ¨åŒºåŸŸ */
.header {
  text-align: center;
  margin-bottom: 48rpx;
  animation: slideUp 0.6s ease-out;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 32rpx;
  background: linear-gradient(45deg, #FF6B9D, #FF8E53, #FFC107);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  background-size: 200% 200%;
  animation: gradientShift 4s ease infinite;
}

/* æ ‡ç­¾é¡µ */
.tabs {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  background: white;
  padding: 8rpx;
  border-radius: 40rpx;
  box-shadow: var(--shadow-md);
  max-width: 400rpx;
  margin: 0 auto;
}

.tab-btn {
  background: transparent;
  color: var(--text-secondary);
  border: none;
  border-radius: 32rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  font-weight: 500;
  padding: 0 32rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.tab-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--primary-gradient);
  opacity: 0;
  transition: opacity 0.3s ease;
  border-radius: 32rpx;
}

.tab-btn.active {
  color: white;
  transform: scale(1.05);
}

.tab-btn.active::before {
  opacity: 1;
}

.tab-btn text {
  position: relative;
  z-index: 1;
}

.tab-btn:active {
  transform: scale(0.98);
}

/* å›å¿†å½•åˆ—è¡¨ */
.memories-list {
  margin-bottom: 40rpx;
}

.memory-card {
  background: white;
  border-radius: 40rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: var(--shadow-lg);
  display: flex;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  animation: slideUp 0.8s ease-out both;
}

.memory-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #FF6B9D, #FF8E53, #FFC107);
  background-size: 200% 200%;
  animation: gradientShift 6s ease infinite;
}

.memory-card:hover {
  transform: translateY(-8rpx);
  box-shadow: var(--shadow-xl);
}

/* æ—¶é—´è½´åŠ¨ç”» */
.memory-card:nth-child(odd) {
  animation-delay: 0.1s;
}

.memory-card:nth-child(even) {
  animation-delay: 0.2s;
}

.memory-card:nth-child(3n) {
  animation-delay: 0.3s;
}

/* å°é¢å›¾ç‰‡ */
.memory-cover {
  width: 180rpx;
  height: 180rpx;
  border-radius: 24rpx;
  margin-right: 32rpx;
  flex-shrink: 0;
  box-shadow: var(--shadow-md);
  transition: all 0.3s ease;
}

.memory-card:hover .memory-cover {
  transform: scale(1.05);
  box-shadow: var(--shadow-lg);
}

/* å›å¿†å½•ä¿¡æ¯ */
.memory-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.memory-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.memory-date {
  font-size: 24rpx;
  color: var(--text-tertiary);
  margin-bottom: 20rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.memory-date::before {
  content: 'ğŸ“…';
  font-size: 20rpx;
}

/* ç»Ÿè®¡ä¿¡æ¯ */
.memory-stats {
  display: flex;
  gap: 12rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.stat-item {
  font-size: 22rpx;
  color: var(--text-secondary);
  background: var(--bg-tertiary);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.stat-item:hover {
  background: var(--primary-light);
  color: white;
  transform: translateY(-2rpx);
}

/* æ‘˜è¦ */
.memory-summary {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 16rpx;
  flex-grow: 1;
}

/* æ“ä½œæŒ‰é’® */
.memory-actions {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  display: flex;
  gap: 12rpx;
}

.action-btn {
  background: var(--primary-gradient);
  color: white;
  border: none;
  border-radius: 32rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 24rpx;
  font-weight: 500;
  padding: 0 24rpx;
  box-shadow: var(--shadow-md);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.action-btn::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.action-btn:active::after {
  width: 200rpx;
  height: 200rpx;
}

.action-btn:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-sm);
}

/* ç©ºçŠ¶æ€ */
.empty-state {
  text-align: center;
  padding: 160rpx 40rpx;
  animation: fadeIn 0.8s ease-out;
}

.empty-icon {
  display: block;
  font-size: 160rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
  animation: heartbeat 3s ease-in-out infinite;
}

.empty-title {
  display: block;
  font-size: 40rpx;
  color: var(--text-primary);
  font-weight: 600;
  margin-bottom: 24rpx;
}

.empty-desc {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  max-width: 480rpx;
  margin: 0 auto 40rpx;
}

/* åŠ è½½çŠ¶æ€ */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: var(--text-secondary);
  font-size: 28rpx;
}

.loading::before {
  content: '';
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--primary-light);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  margin-right: 20rpx;
  animation: spin 1s linear infinite;
}

/* ç‰¹æ®Šæ•ˆæœ */
.love-animation {
  position: relative;
}

.love-animation::after {
  content: 'ğŸ’•';
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  font-size: 32rpx;
  animation: float 3s ease-in-out infinite;
  opacity: 0.8;
}

@keyframes float {
  0%, 100% { 
    transform: translateY(0) rotate(0deg);
    opacity: 0.8;
  }
  50% { 
    transform: translateY(-20rpx) rotate(10deg);
    opacity: 1;
  }
}

/* å“åº”å¼ä¼˜åŒ– */
@media (max-width: 750rpx) {
  .container {
    padding: 24rpx;
  }
  
  .title {
    font-size: 40rpx;
  }
  
  .memory-card {
    padding: 24rpx;
    border-radius: 32rpx;
    flex-direction: column;
  }
  
  .memory-cover {
    width: 100%;
    height: 300rpx;
    margin-right: 0;
    margin-bottom: 24rpx;
  }
  
  .memory-info {
    width: 100%;
  }
  
  .memory-title {
    font-size: 30rpx;
  }
  
  .memory-summary {
    font-size: 24rpx;
    -webkit-line-clamp: 2;
  }
  
  .memory-actions {
    position: static;
    justify-content: center;
    margin-top: 24rpx;
  }
  
  .action-btn {
    flex: 1;
    max-width: 200rpx;
  }
  
  .tabs {
    max-width: 300rpx;
  }
  
  .tab-btn {
    height: 56rpx;
    line-height: 56rpx;
    font-size: 26rpx;
    padding: 0 24rpx;
  }
}